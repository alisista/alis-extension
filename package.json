{
  "name": "alis-html-editor",
  "private": true,
  "engines": {
    "node": ">=0.8.0"
  },
  "scripts": {
    "start": "npm run format && npx gulp-cli watch",
    "format": "npx prettier --write app/scripts.babel/*.js"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^6.1.2",
    "gulp-livereload": "^4.0.0",
    "gulp-load-plugins": "^1.2.0",
    "prettier": "^1.13.5"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "chrome": true
    },
    "rules": {
      "eol-last": 0,
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
